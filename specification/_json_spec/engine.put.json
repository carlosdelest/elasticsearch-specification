{
  "engine.put": {
    "documentation": {
      "url": "http://todo.com/tbd",
      "description": "Creates or updates an engine."
    },
    "stability": "experimental",
    "visibility": "feature_flag",
    "feature_flag": "xpack.ent-search.enabled",
    "headers": {
      "accept": [
        "application/json"
      ],
      "content_type": [
        "application/json"
      ]
    },
    "url": {
      "paths": [
        {
          "path": "/_engine/{engine_id}",
          "methods": [
            "PUT"
          ],
          "parts": {
            "engine_id": {
              "type": "string",
              "description": "The name of the engine to be created or updated"
            }
          }
        }
      ]
    },
    "params": {
      "create": {
        "type": "boolean",
        "description": "If true, requires that an engine with the specified engine_id does not already exist. (default: false)"
      }
    },
    "body": {
      "description": "The engine configuration, including `indices`",
      "required": true
    }
  }
}
